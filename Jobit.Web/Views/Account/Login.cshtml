@model LoginModel

@{
    ViewData["Title"] = "Log-in";
    Layout = "_Layout";
}

@section css{
    <!-- BOOTSTRAP 4.6.0 -->
    <!-- [slightly customed BS in accordance with specification without changes of core elements] -->
    <link rel="stylesheet" href="~/css/css-min/Search.bundle.posted.min.css">

}

@section Header {

    <header>
        <nav class="navbar shadow justify-content-between w-100 px-2">
            <div class="d-inline-flex">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/Logo.svg" alt="" class="logo align-self-center">
                </a>
            </div>
            <div class="d-inline-flex py-2">
                <a class="btn btn-reg btn-jobit-60 rounded-pill mr-2" asp-action="Registration">
                    <i class="bi bi-card-checklist"></i>&ensp;Регистрация
                </a>
            </div>
        </nav>
    </header>

}


<main class="d-flex justify-content-center bg-gradient">
    <div class="align-self-center">
        <img src="/Logo.svg" alt="" class="logo align-self-center">
        <h1 class="h3 mb-3 font-weight-normal">Авторизация пользователя</h1>
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-controller="Account" asp-action="Login" method="post" class="form-signin text-center">
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl">
            <input asp-for="Email" type="email" class="form-control" placeholder="Введите e-mail" required autofocus>
            <input asp-for="Password" type="password" class="form-control" placeholder="Введите пароль" required>
            <button class="btn btn-lg btn-jobit-80 btn-block my-2" type="submit">Войти</button>
            <p class="mt-5 mb-3 text-muted">&copy;2021</p>
        </form>

    </div>
</main>



