@{
    ViewData["Title"] = "Агрегатор";
    Layout = "_Layout";
}

@section css{
    <!-- BOOTSTRAP 4.6.0 -->
    <!-- [slightly customed BS in accordance with specification without changes of core elements] -->
    <link rel="stylesheet" href="~/css/css-min/Search.bundle.posted.min.css">

}

@section Header {

    <a class="nav-link active p-2 menu border-bottom" asp-action="Index">
        <i class="bi bi-diagram-3-fill"></i>&ensp;Агрегатор
    </a>
    <a class="nav-link p-2 menu" asp-action="UserManagement">
        <i class="bi bi-people-fill"></i>&ensp;Пользователи
    </a>
    <a class="nav-link  p-2 menu" asp-action="AdminProps">
        <i class="bi bi-gear-fill"></i>&ensp;Аккаунт
    </a>
    <a class="nav-link  p-2 menu" asp-action="Logs">
        <i class="bi bi-journal-text"></i>&ensp;Логи
    </a>
    <a class="btn btn-reg btn-jobit-60 rounded-pill ml-auto" asp-controller="Account" asp-action="Logout">
        <i class="bi bi-box-arrow-right "></i>&ensp;Выйти
    </a>
}

<div class="col-12 p-0">
    <div class="d-flex vh-100 justify-content-center">
        <div class="col-lg-8">
            <h4 class="my-3 font-weight-bold">Состояние агрегатора:</h4>
            <div class="input-group mb-3 w-50">
                <div class="input-group-prepend w-50">
                    <span class="input-group-text bg-dark text-white w-100">Дата последнего запуска:</span>
                </div>
                <input type="text" class="form-control" id="AgrDate" placeholder="18/10/2021" value="" readonly>
            </div>
            <div class="input-group mb-3 w-50">
                <div class="input-group-prepend w-50">
                    <span class="input-group-text bg-dark text-white w-100">Количество вакансий:</span>
                </div>
                <input type="text" class="form-control" id="VacNum" placeholder="20123" value="" readonly>
            </div>

            <h4 class="my-3 font-weight-bold">Настройки агрегатора:</h4>
            <table class="table table-bordered table-hover table-sm">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">№</th>
                        <th scope="col">Источник</th>
                        <th scope="col">Дата последней агрегации</th>
                        <th scope="col">Количество полученных вакансий</th>
                        <th scope="col">Запустить агрегатор</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>praca.by</td>
                        <td>08.10.2021</td>
                        <td>100</td>
                        <td class="text-center">
                            <button type="submit" class="btn btn-warning bi-collection-fill">&ensp;Go!</button>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>rabota.by</td>
                        <td>08.09.2021</td>
                        <td>1000</td>
                        <td class="text-center">
                            <button type="submit" class="btn btn-warning bi-collection-fill">&ensp;Go!</button>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">3</th>
                        <td>rabota.yandex.ru</td>
                        <td>07.10.2021</td>
                        <td>10000</td>
                        <td class="text-center">
                            <button type="submit" class="btn btn-warning bi-collection-fill">&ensp;Go!</button>
                        </td>
                    </tr>
                </tbody>
            </table>

            <h4 class="my-3 font-weight-bold">Загрузка файлов:</h4>
            <div class="input-group my-2">
                <div class="custom-file">
                    <input type="file" class="custom-file-input bg-dark" id="unloadInstruction" aria-describedby="unloadInstruction">
                    <label class="custom-file-label" for="unloadInstruction" data-browse="Выбрать файл">Инструкция пользователя</label>
                </div>
                <div class="input-group-append">
                    <button class="btn btn-warning" type="button" id="unloadInstruction">Загрузить</button>
                </div>
            </div>
            <div class="input-group my-2">
                <div class="custom-file">
                    <input type="file" class="custom-file-input bg-dark" id="userAgreement" aria-describedby="userAgreement">
                    <label class="custom-file-label" for="userAgreement" data-browse="Выбрать файл">Пользовательское соглашение</label>
                </div>
                <div class="input-group-append">
                    <button class="btn btn-warning" type="button" id="userAgreement">Загрузить</button>
                </div>
            </div>



        </div>
    </div>
</div>

@section js {
    <script>
        $(document).on('change', '.custom-file-input', function (event) {
            $(this).next('.custom-file-label').html(event.target.files[0].name);
        })
    </script>
}