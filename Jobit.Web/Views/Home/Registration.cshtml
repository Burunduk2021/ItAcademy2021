@{
    ViewData["Title"] = "Registration";
    Layout = "_Layout";
}

@section css{
    <!-- BOOTSTRAP 4.6.0 -->
    <!-- [slightly customed BS in accordance with specification without changes of core elements] -->
    <link rel="stylesheet" href="~/css/css-min/Search.bundle.posted.min.css">

}


@section Header {

    <header>
        <nav class="navbar shadow justify-content-between w-100 px-2">
            <div class="d-inline-flex">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/Logo.svg" alt="" class="logo align-self-center">
                </a>
            </div>
            <div class="d-inline-flex py-2">
                <a class="btn btn-reg btn-jobit-60 rounded-pill" asp-action="LogIn">
                    <i class="bi bi-box-arrow-right "></i>&ensp;Войти
                </a>
            </div>
        </nav>
    </header>

}

<div class="container vh-100">
    <div class="row">
        <div class="col">
            <h3 class="mb-3 ">Регистрационные данные:</h3>
            <form class="needs-validation" novalidate>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="font-weight-bold" for="firstName">Имя</label>
                        <input type="text" class="form-control" id="firstName" placeholder="" value="" required>
                        <div class="invalid-feedback">
                            Введите корректное имя.
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="font-weight-bold" for="lastName">Фамилия</label>
                        <input type="text" class="form-control" id="lastName" placeholder="" value="" required>
                        <div class="invalid-feedback">
                            Введите корректную фамилию.
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8 mb-3">
                        <label class="font-weight-bold" for="Email">E-mail</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">@@</span>
                            </div>
                            <input type="text" class="form-control" id="Email" placeholder="" value="" required>
                            <div class="invalid-feedback">
                                Введите валидный e-mail.
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="font-weight-bold" for="Password">Пароль</label>
                        <input type="password" class="form-control" id="Password" placeholder="" value="" required>
                        <div class="invalid-feedback">
                            Введите валидный пароль.
                        </div>
                    </div>
                </div>

                <hr class="mb-4">
                <h5>Дополнительные сведения:</h5>
                <small class="form-text text-muted">
                    Эти данные будут использоваться для оптимизации поиска вакансий.
                </small>

                <div class="row">
                    <div class="col-md-4 mb-3 mt-3">
                        <label class="font-weight-bold" for="Email">Ваш пол:</label>
                        <div class="custom-control custom-radio">
                            <input type="radio" id="male" name="Sex" value="1" class="custom-control-input">
                            <label class="custom-control-label" for="male">Мужской</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input type="radio" id="female" name="Sex" value="1" class="custom-control-input">
                            <label class="custom-control-label" for="female">Женский</label>
                        </div>
                    </div>
                    <div class="col-md-8 mb-3">
                        <div class="input-group mt-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Возраст</span>
                            </div>
                            <input type="text" class="form-control" id="Age" placeholder=" ... (полных лет)" value="" required>
                            <div class="invalid-feedback">
                                Введите Ваш возраст (полных лет).
                            </div>
                        </div>
                        <div class="input-group mt-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Стаж в IT</span>
                            </div>
                            <input type="text" class="form-control" id="experience" placeholder=" ... (полных лет)" value="" required>
                            <div class="invalid-feedback">
                                Введите Ваш опыт работы в IT (полных лет).
                            </div>
                        </div>
                    </div>

                </div>

                <div class="mb-3">
                    <label class="font-weight-bold" for="region">Регион:</label>
                    <select class="custom-select d-block w-100" id="region" required>
                        <option value="">Выберите...</option>
                        <option value="1">Минск</option>
                        <option value="2">Минская область</option>
                        <option value="3">Брестская область</option>
                        <option value="4">Витебская область</option>
                        <option value="5">Гомельская область</option>
                        <option value="6">Гродненская область</option>
                        <option value="7">Могилевская область</option>
                    </select>
                    <div class="invalid-feedback">
                        Пожалуйста, укажите регион Вашего проживания.
                    </div>
                </div>


                <hr class="mb-4">
                <button class="btn btn-jobit-80 btn-lg btn-block" type="submit">Зарегистрироваться!</button>
            </form>
        </div>
    </div>
</div>


