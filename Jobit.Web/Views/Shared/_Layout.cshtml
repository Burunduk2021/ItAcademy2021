<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jobit.Web</title>

    @*----- ICONS  -----*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

    @await RenderSectionAsync("css", required: false)

</head>
<body class="d-flex flex-column h-100">

    @await RenderSectionAsync("Header", required: false)

    @RenderBody()

    @* ------ FOOTER ------ *@
    <footer class="footer footer-general  footer-text fixed-bottom">
        <div>
            &copy; 2021 - JobIT - <a asp-area="" asp-controller="Home" asp-action="Privacy">О нас</a>
        </div>
    </footer>
    @* ------ /FOOTER ------ *@

    @* ------JS (JQUERY / BOOTSTRAP) ------ *@
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
            integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
            crossorigin="anonymous"></script>
    <script src="~/js/js-min/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("js", required: false)

</body>
</html>
