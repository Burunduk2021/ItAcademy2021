@section Header {

    <div class="ml-auto my-1">
        <a class="btn btn-reg btn-jobit-60 rounded-pill" asp-controller="Account" asp-action="Registration">
            <i class="bi bi-card-checklist"></i>&ensp;Регистрация
        </a>
        <a class="btn btn-reg btn-jobit-60 rounded-pill ml-2" asp-controller="Account" asp-action="Login">
            <i class="bi bi-box-arrow-right "></i>&ensp;Войти
        </a>
    </div>
}

<div class="col-12 p-0">
    <div class="d-flex vh-100 justify-content-center bg-gradient">
            <form class="input-group align-self-center w-50 mb-3">
                <input type="text" class="form-control" placeholder="Профессия, должность или компания">
                <div class="input-group-append">
                    <button class="btn btn-warning" type="submit" asp-action="Search">Найти!</button>
                </div>
            </form>
    </div>
</div>

